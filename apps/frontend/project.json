{
  "name": "frontend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/frontend/src",
  "projectType": "application",
  "tags": [
    "scope:frontend",
    "domain:landing",
    "type:app"
  ],
  "implicitDependencies": [],
  "targets": {
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/frontend/jest.config.mjs",
        "passWithNoTests": false
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec eslint apps/frontend --ext .ts,.tsx,.js,.jsx"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/frontend",
        "command": "next build"
      },
      "outputs": [
        "{workspaceRoot}/apps/frontend/.next/!(cache)/**/*",
        "{workspaceRoot}/apps/frontend/.next/!(cache)"
      ],
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "default",
        "^production",
        {
          "externalDependencies": [
            "next"
          ]
        }
      ]
    },
    "docker-build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker compose build frontend"
      }
    },
    "docker-up": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker compose up frontend backend"
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/frontend",
        "command": "next start"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/frontend",
        "command": "next dev"
      }
    }
  }
}
