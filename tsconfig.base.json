{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "lib": ["DOM", "ES2022"],
    "types": [],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@antifa-bookclub/api-types": ["libs/api-types/src/index.ts"],
      "@antifa-bookclub/core/utils": ["libs/core/utils/src/index.ts"],
      "@antifa-bookclub/config": ["libs/config/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
