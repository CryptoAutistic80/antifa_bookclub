{
  "$schema": "./node_modules/nx/schemas/project-schema.json",
  "name": "site",
  "projectType": "application",
  "sourceRoot": "app",
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec next dev",
        "forwardAllArgs": true
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/.next"],
      "options": {
        "command": "pnpm exec next build"
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec next start",
        "forwardAllArgs": true
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec eslint . --ext js,jsx"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo \"No tests configured for site\""
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec tsc --noEmit"
      }
    }
  },
  "tags": ["type:app", "scope:frontend", "domain:site", "layer:ui"]
}
